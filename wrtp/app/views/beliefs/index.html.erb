<p id="notice"><%= notice %></p>

<h1>Listing Beliefs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Explanation</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beliefs.each do |belief| %>
      <tr>
        <td><%= belief.title %></td>
        <td><%= belief.summary %></td>
        <td><%= belief.explanation %></td>
        <td><%= belief.score %></td>
        <td><%= link_to 'Show', belief %></td>
        <td><%= link_to 'Edit', edit_belief_path(belief) %></td>
        <td><%= link_to 'Destroy', belief, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

